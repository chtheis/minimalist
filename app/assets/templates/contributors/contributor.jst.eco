<% if @image_url: %>
  <img class="contributor-avatar" src="<%= @image_url %>"/>
<% else: %>
  <span class="contributor-avatar"><%= (@name || @email || '')[0] %></span>
<% end %>
<span><%= @name || @email %></span>
<% if !@is_owner: %>
  <svg class="icon-close remove-contributor"><use xlink:href="/assets/icons.svg#icon-close"></use></svg>
<% end %>
