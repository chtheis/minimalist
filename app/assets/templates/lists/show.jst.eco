<div class="loading">Pull to refresh</div>

<div id="stats">
  <i><%= @remaining %></i>
  <a class="back" href="<%= @url %>"><img src="/assets/back.png"/></a>
  <h2 title="<%= @name %>"><%= @name %></h2>
  <input class="edit" type="text" value="<%= @name %>" />
</div>

<div class="list">
  <ul id="add-item" class="items"></ul>
  <ul id="item-list" class="items"></ul>
</div>
