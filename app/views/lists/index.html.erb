<h1>Lists</h1>

<ul>
  <% @lists.each do |list| %>
    <li>
      <p><%= link_to "#{list.name}", list_url(list) %> - <%= link_to "Edit", edit_list_url(list) %> | <%= link_to "Delete", list_url(list), :method => :delete %></p>
    </li>
  <% end %>
</ul>

